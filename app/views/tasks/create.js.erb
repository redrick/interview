$('#filter-btn-group').replaceWith('<%= j ui_component "tasks/filter_button_group", user: @user, active_count: @active_count %>');
$('.tasks #new_task').remove();
<% if @task.valid? %>
  $('.tasks').append('<%= j ui_component "tasks/task", task: @task, user: @user %>');
<% else %>
  $('.tasks').append('<%= j ui_component "tasks/form", task: @task, user: @user %>');
<% end %>
