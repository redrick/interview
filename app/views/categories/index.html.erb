
<h1>Categories</h1>

<%= link_to 'Create category', new_category_path, class: 'btn btn-primary' %>

<% if @categories.any? %>
    <table class="table">
      <thead>
      <tr>
        <th>Name</th>
        <th></th>
      </tr>
      </thead>
      <tbody>
      <%= render partial: 'category', collection: @categories %>
      </tbody>
    </table>
<% else %>
    <hr/>
    <p>No categories. <%= link_to 'Create', new_category_path %> one.</p>
<% end %>
